 .avatar-wrapper {
  background: #b3d4db;
  padding: 25px 0;
}

.avatar-wrapper .avatar {
  margin: 0 auto;
  text-align: center;
}

.avatar-wrapper .avatar image {
  width: 200rpx;
  height: 200rpx;
}
   
.avatar-wrapper .text {
  text-align: center;
  color: #000;
}

.cut-off-bar{
  width: 100%;
  height: 60rpx;
  background-color: #eee;
}

.menu-container{
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5rpx;

}

.menu-image{
  margin-top: 20rpx;
  width: 80rpx;
  height: 60rpx;
}

.menu-container text{
  font-size: 32rpx;
  vertical-align: middle;
  padding-top: 28rpx;
}

.switch{
  padding-top: 16rpx;

  position:absolute/fixed;
  margin-left:400rpx;
}

